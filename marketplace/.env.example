# Agent Marketplace - Environment Variables
# Copy to .env.local and fill in your values

# ============================================
# Coinbase Developer Platform (CDP)
# Required for $15K gas credit program
# ============================================

# Get these from: https://portal.cdp.coinbase.com/
# After creating project and enabling Paymaster service
NEXT_PUBLIC_COINBASE_PAYMASTER_URL=https://api.developer.coinbase.com/rpc/v1/base/<YOUR_PROJECT_ID>
COINBASE_API_KEY=cdp_api_key_xxxxx
COINBASE_API_SECRET=cdp_api_secret_xxxxx

# ============================================
# Blockchain (Base L2)
# ============================================

# RPC URLs
NEXT_PUBLIC_BASE_RPC_URL=https://mainnet.base.org
BASE_MAINNET_RPC_URL=https://mainnet.base.org
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org

NEXT_PUBLIC_CHAIN_ID=8453

# Smart Contract Address (after deployment)
NEXT_PUBLIC_MARKETPLACE_ADDRESS=
MARKETPLACE_CONTRACT_ADDRESS=

# Treasury wallet (receives platform fees)
# IMPORTANT: Use a secure wallet for mainnet
MARKETPLACE_TREASURY_ADDRESS=

# Admin private key (for deployment and indexer)
# SECURITY: Never commit this! Add to .env.local only
ADMIN_PRIVATE_KEY=

# Basescan API Key (for contract verification)
# Get from: https://basescan.org/myapikey
BASESCAN_API_KEY=

# ============================================
# Database
# ============================================

# Supabase or Railway Postgres
DATABASE_URL=postgresql://user:password@host:5432/database

# Upstash Redis (for caching)
UPSTASH_REDIS_URL=
UPSTASH_REDIS_TOKEN=

# ============================================
# Storage
# ============================================

# Pinata (IPFS)
PINATA_JWT=

# Alternative: Web3.Storage
# WEB3_STORAGE_TOKEN=

# ============================================
# Analytics & Monitoring (Optional)
# ============================================

# PostHog
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=

# Sentry
SENTRY_DSN=

# ============================================
# Stripe (for Observatory subscriptions)
# ============================================

STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
